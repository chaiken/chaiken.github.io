 slides/sysdev-realtime/sysdev-realtime.tex |   12 +++++++-----
 1 file changed, 7 insertions(+), 5 deletions(-)

diff --git a/slides/sysdev-realtime/sysdev-realtime.tex b/slides/sysdev-realtime/sysdev-realtime.tex
index dc2b67a..c65b753 100644
--- a/slides/sysdev-realtime/sysdev-realtime.tex
+++ b/slides/sysdev-realtime/sysdev-realtime.tex
@@ -846,7 +846,7 @@ timer_delete(timer_t timerid)
   \begin{itemize}
   \item Developed by Steven Rostedt. Merged in 2.6.27. For earlier
     kernels, can be found from the PREEMPT\_RT patches.
-  \item Very well documented in \kerneldoc{ftrace.txt}
+  \item Very well documented in \kerneldoc{trace/ftrace.txt}
   \item Negligible overhead when tracing is not enabled at run-time.
   \item Can be used to trace any kernel function!
   \item See our video of Steven's tutorial at OLS 2008:\\
@@ -860,9 +860,11 @@ timer_delete(timer_t timerid)
   \item Tracing information available through the debugfs virtual fs
     (\code{CONFIG_DEBUG_FS} in the {\em Kernel Hacking} section)
   \item Mount this filesystem as follows:\\
-    \code{mount -t debugfs nodev /debug}
+    \code{mount -t debugfs nodev /sys/kernel/debug}
+  \item For quicker access, you may want to make a soft link:
+    \code{ln -s /sys/kernel/debug /debug}
   \item When tracing is enabled (see the next slides), tracing
-    information is available in \code{/debug/tracing}.
+    information is then available in \code{/debug/tracing}.
   \item Check available tracers in
     \code{/debug/tracing/available_tracers}
   \end{itemize}
@@ -893,7 +895,7 @@ echo 1 > /debug/tracing/tracing_enabled
     \begin{block}{}
 \footnotesize
 \begin{verbatim}
-echo 0 > /debug/tracing/tracing_enabled
+echo 0 > /debug/tracing/tracing_on
 \end{verbatim}
 \small
     \end{block}{}
@@ -903,7 +905,7 @@ echo 0 > /debug/tracing/tracing_enabled
 \end{frame}
 
